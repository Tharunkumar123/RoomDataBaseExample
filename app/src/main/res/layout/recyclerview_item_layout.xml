<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="@dimen/_8dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/listCardView"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8dp">


    <com.example.roomdatabaseexample.widgets.MyTextView
        android:id="@+id/textViewStatus"
        style="@style/extra_large_text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_8dp"
        android:background="#01FC13"
        android:text=" Completed "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.roomdatabaseexample.widgets.MyTextView
        android:id="@+id/textViewTask"
        style="@style/double_extra_large_text_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_24dp"
        android:text="Go Bring Eggs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatus" />

    <com.example.roomdatabaseexample.widgets.MyTextView
        android:id="@+id/textViewDesc"
        style="@style/large_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_24dp"
        android:text="Bring 6 eggs from super market"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTask" />

    <com.example.roomdatabaseexample.widgets.MyTextView
        android:id="@+id/textViewFinishBy"
        style="@style/large_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_24dp"
        android:text="5pm today"
        app:layout_constraintTop_toBottomOf="@+id/textViewDesc" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>